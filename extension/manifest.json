{
  "manifest_version": 3,
  "name": "Currency Converter Pro",
  "version": "1.0.0",
  "description": "Automatically converts foreign currencies to your preferred base currency on any website",
  
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  
  "host_permissions": [
    "https://api.exchangerate-api.com/*"
  ],
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Currency Converter Pro"
  },
  
  "options_page": "options.html"
}